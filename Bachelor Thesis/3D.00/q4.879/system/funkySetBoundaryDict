FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

inlet 
{
    field alpha1;
    expressions
    (
	{
	        target 		value;
        	patchName 	inlet;
                expression 	"pos().z < 1.224 ? 1 : 0";
	}
    );
}

inlet
{
    field U;
    expressions
    (
	{
		target 		value;
		patchName	inlet;
		expression	"alpha1 == 1 ? vector(0.7226,0,0) : vector(0,0,0)";
	}
    );
} 

